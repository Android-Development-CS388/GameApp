<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"
    tools:context=".GameInfoActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:text="This is a test game title" />

    <TextView
        android:id="@+id/tvGameGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGameTitle"
        android:layout_marginStart="4dp"
        android:layout_marginTop="173dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="205dp"
        tools:text="Genre1, Genre2, Genre3" />

    <TextView
        android:id="@+id/tvGameRating"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGameTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="205dp"
        tools:text="8.8/10" />

    <TextView
        android:id="@+id/tvWebsites"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_below="@+id/tvGameSummary"
        android:layout_marginTop="19dp"
        android:background="@color/white"
        android:linksClickable="true"
        android:text="TextView"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/tvGameSummary"
        android:layout_width="wrap_content"
        android:layout_height="168dp"
        android:layout_below="@+id/ivImg"
        android:layout_marginStart="4dp"
        android:layout_marginTop="43dp"
        android:background="@color/white"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="5dp"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="249dp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Nunc vel risus commodo viverra maecenas. Hendrerit dolor magna eget est lorem ipsum dolor sit. Nunc aliquet bibendum enim facilisis. Massa tempor nec feugiat nisl pretium fusce. Scelerisque viverra mauris in aliquam. Turpis egestas sed tempus urna et pharetra pharetra massa. Consectetur adipiscing elit ut aliquam purus sit amet luctus venenatis. Neque laoreet suspendisse interdum consectetur. Neque volutpat ac tincidunt vitae semper quis lectus. Ipsum suspendisse ultrices gravida dictum. Nibh ipsum consequat nisl vel pretium lectus. Nisi quis eleifend quam adipiscing vitae proin sagittis nisl. Rhoncus urna neque viverra justo nec ultrices dui sapien. Amet nisl suscipit adipiscing bibendum est ultricies integer quis auctor. Integer feugiat scelerisque varius morbi enim nunc faucibus. Eget gravida cum sociis natoque penatibus et. Lorem ipsum dolor sit amet consectetur adipiscing." />

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_below="@+id/tvGameGenres"
        android:layout_marginTop="-181dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="56dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</RelativeLayout>